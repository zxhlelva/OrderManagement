<UserControl x:Class="OrderManagement.View.MarketSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Market Summary Window"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ProductId}" Header="Product Id" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding BidSize}" Header="Bid Size" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding BidPrice}" Header="Bid Price" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding OfferSize}" Header="Offer Size" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding OfferPrice}" Header="Offer Price" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
